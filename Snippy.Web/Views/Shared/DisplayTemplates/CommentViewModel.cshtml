@model Snippy.Web.Models.ViewModels.CommentViewModel

<div class="panel panel-default">
    <div class="panel-body">
        <p>
            @Model.Content
        </p>
        <p>
            <span class="glyphicon glyphicon-user"></span><b>@Model.UserUserName</b> on @Model.CreationTime
        </p>
        <p>
            on snippet @Html.ActionLink(@Model.SnippetTitle, "Details", "Snippets", new { id = Model.SnippetId }, null)
        </p>
    </div>
</div>
