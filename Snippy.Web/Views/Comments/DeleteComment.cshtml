@model Snippy.Web.Models.ViewModels.CommentViewModel

@{
    ViewBag.Title = "Delete comment - Snippy";
}

<h1>Delete comment</h1>
<p>Are you sure you want to delete this comment?</p>
@Html.DisplayForModel()

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="DeleteComment" class="btn btn-danger" /> 
        @Html.ActionLink("Cancel", "Details", "Snippets", new { id = @Model.SnippetId }, new { @class = "btn btn-default"})
    </div>
}